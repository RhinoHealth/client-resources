# !! EDIT THIS: Set the version of Python to be used.
FROM python:3.8-bullseye as wheelbuilder

COPY requirements.txt ./

COPY ./nvflare_nightly-nohe-2.0.5-py3-none-any.whl /nvflare_nightly-nohe-2.0.5-py3-none-any.whl

RUN --mount=type=cache,target=/.cache/pip \
    python -m pip install -U pip setuptools wheel \
 && pip wheel --cache-dir=/.cache/pip --wheel-dir /wheels -r requirements.txt "nvflare_nightly-nohe-2.0.5-py3-none-any.whl"



# !! EDIT THIS: Set the version of Python to be used.
FROM python:3.8-slim-bullseye

COPY --from=wheelbuilder /wheels /wheels
RUN python -m venv /venv \
 && . /venv/bin/activate \
 && python -m pip install --no-cache -U pip setuptools wheel \
 && pip install --no-cache /wheels/*

ARG UID=5642
ARG GID=5642

RUN ( getent group $GID >/dev/null || groupadd -r -g $GID localgroup ) \
 && useradd -ms /bin/bash -g $GID -u $UID localuser \
 && chown -R $UID:$GID /venv
WORKDIR /home/localuser
USER localuser

COPY ./config ./custom  ./

# This is basically what venv/bin/activate does
ENV PATH="/venv/bin:$PATH"
ENV VIRTUAL_ENV="/venv"

# !! EDIT THIS: Set the command to be executed when the container is run, with arguments as needed.
CMD ["TODO"]
